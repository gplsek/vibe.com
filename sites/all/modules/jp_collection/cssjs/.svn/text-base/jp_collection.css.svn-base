/* photo gallery module admin css */
#sortable, #image-results { 
	list-style-type: none;
	margin: 0;
	padding: 0; 
}

#sortable li, #image-results li { 
	list-style-type: none !important; 
	margin: 1px 1px 1px 0; 
	padding: 1px; 
	float: left; 
	width: 100px; 
	height: 100px; 
	text-align: center; 
	margin-left: 0px !important;
	font-size: 8px !important; 
	border: 0 !important;
}

#sortable li { 
	font-size: 8px; 
	cursor: move; 
}

#image-results .ui-selecting { 
	background: #FECA40; 
}

#image-results .ui-selected { 
	background: #F39814; 
	color: white; 
}

#manage-buttons {
	margin-top: 20px;
}

.ui-button { 
	outline: 0;
	margin:0; 
	padding: .4em 1em .5em; 
	text-decoration:none !important; 
	cursor:pointer; 
	position: relative; 
	text-align: center;
}

#image-results-container { 
	height: 300px; 
	width: 96%; 
	overflow-y:scroll; 
	overflow-x: hidden;
	display:none;
}

.portlet { 
	margin: 0 1em 1em 0;
	height: 100px;
}
 
.portlet-header { 
	height: 20px; 
	overflow: hidden; 
	margin: 0.3em; 
	padding-bottom: 4px; 
	padding-left: 0.2em; 
}
.portlet-header .ui-icon { 
	float: right; 
	cursor: pointer;	
}
.portlet-content { 
	overflow: hidden; 
	height: 60px;
	width: 80px;
	margin-left: 5px; 
}

.ui-sortable-placeholder { 
	border: 1px dotted black; 
	visibility: visible !important; 
	height: 50px !important; 
}

.ui-sortable-placeholder * { 
	visibility: hidden; 
}
.ui-icon ui-icon-trash {
	cursor: pointer;
}

#progressbar {
	display:none;
	z-index: 200000;
	width: 250px;
	position: absolute;
}

.ui-progressbar-value { 
	background-image: url(images/pbar-ani.gif); 
	height: 22px;
}

#manage-buttons button, .searchBtn {
    margin: .5em 0 .5em 8px;
	color: #555555;
	background: #e6e6e6 url(images/e6e6e6_40x100_textures_02_glass_75.png) 0 50% repeat-x;
	font-size: 1em;
	border: 1px solid #d3d3d3;
	cursor: pointer;
	padding: .2em .6em .3em .6em;
	line-height: 1.4em;
}

#search_term {
	border: 1px #e6e6e6 solid;
	height: 1.8em;
	vertical-align: middle;
}

#messageBox {
	display: none;
	margin-bottom: 10px;
}

.ui-state-error p {
	margin:5px 0;
}

.view-search-image-nodes {
	width: 600px !important;
}
.views-field-nid {
	display: none;
}

.portlet-title {
	float:left;
	overflow:hidden;
	white-space:nowrap;
	width:46px;
}
